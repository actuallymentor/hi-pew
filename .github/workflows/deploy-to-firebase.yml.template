name: Deploy Frontend on push/merge

# Only trigger on PR/push and only for frontend files
on:
  # Trigger on PR close
  # pull_request:
  #   types: [ closed ]
  #   paths:
  #     - 'src/**'
  #     - 'modules/**'
  #   branches:
  #     - master
  
  # Trigger on push to master (edge case, local merge)
  push:
    branches:
      - master
    paths:
      - '*.json'
      - '*.js'
      - 'src/**'
      - 'modules/**'
      - '.github/workflows/deploy-to-firebase.yml'

jobs:
  # Build the frontend giles
  build:
    name: Compile frontend

    runs-on: ubuntu-latest

    steps:
      # Get the repo files from current commit
      - name: Cloning repository
        uses: actions/checkout@v1

      - name: installing node 14
        uses: actions/setup-node@v1
        with:
          node-version: '14.x'

      - name: Install dependencies
        run: npm i

      - name: Webpack build (production)
        env:
          NODE_ENV: production
        run: webpack
        env:
          NODE_ENV: 'production'

      - name: Deploy to Firebase
        uses: w9jds/firebase-action@master
        with:
          args: deploy --only hosting
        env:
          FIREBASE_TOKEN: ${{ secrets.FIREBASE_TOKEN }}
